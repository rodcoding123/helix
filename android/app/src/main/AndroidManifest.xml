<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.helix">

    <!-- Network permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <!-- Clipboard access -->
    <uses-permission android:name="android.permission.INTERACT_ACROSS_USERS" />

    <!-- Screen capture protection -->
    <uses-permission android:name="android.permission.MANAGE_OWN_FLASH" />

    <application
        android:allowBackup="false"
        android:debuggable="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:supportsRtl="true"
        android:theme="@style/Theme.Helix"
        android:usesCleartextTraffic="false">

        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Service for background gateway connection -->
        <service
            android:name=".core.gateway.GatewayConnectionService"
            android:enabled="true"
            android:exported="false"
            android:foreground ServiceType="connectedDevice" />

    </application>

</manifest>
