<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Light Theme -->
    <style name="Theme.HelixChat" parent="android:Theme.Material.Light">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/md_theme_light_primary</item>
        <item name="android:colorOnPrimary">@color/md_theme_light_on_primary</item>
        <item name="android:colorPrimaryContainer">@color/md_theme_light_primary_container</item>
        <item name="android:colorOnPrimaryContainer">@color/md_theme_light_on_primary_container</item>

        <!-- Secondary brand color -->
        <item name="android:colorSecondary">@color/md_theme_light_secondary</item>
        <item name="android:colorOnSecondary">@color/md_theme_light_on_secondary</item>
        <item name="android:colorSecondaryContainer">@color/md_theme_light_secondary_container</item>
        <item name="android:colorOnSecondaryContainer">@color/md_theme_light_on_secondary_container</item>

        <!-- Tertiary brand color -->
        <item name="android:colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="android:colorOnTertiary">@color/md_theme_light_on_tertiary</item>
        <item name="android:colorTertiaryContainer">@color/md_theme_light_tertiary_container</item>
        <item name="android:colorOnTertiaryContainer">@color/md_theme_light_on_tertiary_container</item>

        <!-- Error color -->
        <item name="android:colorError">@color/md_theme_light_error</item>
        <item name="android:colorOnError">@color/md_theme_light_on_error</item>
        <item name="android:colorErrorContainer">@color/md_theme_light_error_container</item>
        <item name="android:colorOnErrorContainer">@color/md_theme_light_on_error_container</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="android:colorOnBackground">@color/md_theme_light_on_background</item>

        <!-- Surface colors -->
        <item name="android:colorSurface">@color/md_theme_light_surface</item>
        <item name="android:colorOnSurface">@color/md_theme_light_on_surface</item>

        <!-- Status bar style -->
        <item name="android:statusBarColor">@color/md_theme_light_primary</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Dark Theme (API 21+) -->
    <style name="Theme.HelixChat.Dark" parent="android:Theme.Material">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/md_theme_dark_primary</item>
        <item name="android:colorOnPrimary">@color/md_theme_dark_on_primary</item>
        <item name="android:colorPrimaryContainer">@color/md_theme_dark_primary_container</item>
        <item name="android:colorOnPrimaryContainer">@color/md_theme_dark_on_primary_container</item>

        <!-- Secondary brand color -->
        <item name="android:colorSecondary">@color/md_theme_dark_secondary</item>
        <item name="android:colorOnSecondary">@color/md_theme_dark_on_secondary</item>
        <item name="android:colorSecondaryContainer">@color/md_theme_dark_secondary_container</item>
        <item name="android:colorOnSecondaryContainer">@color/md_theme_dark_on_secondary_container</item>

        <!-- Tertiary brand color -->
        <item name="android:colorTertiary">@color/md_theme_dark_tertiary</item>
        <item name="android:colorOnTertiary">@color/md_theme_dark_on_tertiary</item>
        <item name="android:colorTertiaryContainer">@color/md_theme_dark_tertiary_container</item>
        <item name="android:colorOnTertiaryContainer">@color/md_theme_dark_on_tertiary_container</item>

        <!-- Error color -->
        <item name="android:colorError">@color/md_theme_dark_error</item>
        <item name="android:colorOnError">@color/md_theme_dark_on_error</item>
        <item name="android:colorErrorContainer">@color/md_theme_dark_error_container</item>
        <item name="android:colorOnErrorContainer">@color/md_theme_dark_on_error_container</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/md_theme_dark_background</item>
        <item name="android:colorOnBackground">@color/md_theme_dark_on_background</item>

        <!-- Surface colors -->
        <item name="android:colorSurface">@color/md_theme_dark_surface</item>
        <item name="android:colorOnSurface">@color/md_theme_dark_on_surface</item>

        <!-- Status bar style -->
        <item name="android:statusBarColor">@color/md_theme_dark_background</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.HelixChat.Button" parent="Widget.Material.Button">
        <item name="android:textColor">@color/md_theme_light_on_primary</item>
        <item name="android:background">@color/md_theme_light_primary</item>
    </style>

    <!-- Text Styles -->
    <style name="TextAppearance.HelixChat.Headline" parent="TextAppearance.Material.Headline6">
        <item name="android:textColor">@color/md_theme_light_on_background</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.HelixChat.Body" parent="TextAppearance.Material.Body1">
        <item name="android:textColor">@color/md_theme_light_on_surface</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.HelixChat.CardView" parent="CardView">
        <item name="cardBackgroundColor">@color/md_theme_light_surface</item>
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>
</resources>
