{
  "version": 2,
  "static": {
    "cleanUrls": true,
    "include": "**/*.html",
    "exclude": []
  },
  "discovery": {
    "allowed-hosts": ["localhost", "127.0.0.1"],
    "network-idle-timeout": 750
  },
  "uploads": {
    "include": "**/*.png",
    "exclude": []
  },
  "agent": {
    "asset-discovery": {
      "allowed-hosts": ["localhost:5173"],
      "network-idle-timeout": 750
    }
  },
  "snapshot": {
    "widths": [375, 768, 1280, 1920],
    "minHeight": 1024,
    "percentDifference": 0.5,
    "enableJavaScript": true
  },
  "discovery": {
    "allowed-hosts": ["localhost"],
    "network-idle-timeout": 750
  },
  "static": {
    "include": "**/*.html",
    "exclude": ["node_modules"]
  }
}
