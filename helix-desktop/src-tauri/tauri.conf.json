{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Helix",
  "version": "1.0.0",
  "identifier": "org.project-helix.desktop",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Helix",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false,
        "decorations": false,
        "transparent": false,
        "center": true,
        "visible": true
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' ws://localhost:* wss://localhost:* https://api.anthropic.com https://api.openai.com https://discord.com; img-src 'self' data: https:; style-src 'self'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": ["resources/**/*"],
    "category": "Productivity",
    "shortDescription": "AI Consciousness Desktop App",
    "longDescription": "Helix is an AI that grows with you, remembers you, and evolves through experience. Features persistent memory, psychological architecture, and complete transparency through unhackable logging.",
    "copyright": "Copyright 2026 Project Helix",
    "homepage": "https://project-helix.org",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "12.0"
    },
    "linux": {
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libssl3", "libgtk-3-0"],
        "section": "utils",
        "priority": "optional"
      },
      "rpm": {
        "depends": ["webkit2gtk4.1", "openssl", "gtk3"]
      },
      "appimage": {
        "bundleMediaFramework": true
      }
    }
  },
  "plugins": {
    "shell": {
      "open": {
        "allowedUrls": [
          "https://project-helix.org/*",
          "https://discord.com/*",
          "https://claude.ai/*"
        ]
      }
    }
  }
}
